generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TicketPriority {
  Low
  Normal
  High
}

enum TicketStatus {
  OpenCall
  InProgress
  Closed
}

enum Department {
  CRP
  EducationMigration
  SkillAssessment
}

model Ticket {
  id          String    @id @default(uuid())
  fullName    String
  phoneNumber String
  email       String
  reason      String
  priority    TicketPriority
  status      TicketStatus
  assignedTo  String
  reportedBy  String
  department  Department
  createdOn   DateTime  @default(now())
  notes       Note[]
}

model Note {
  id        String   @id @default(uuid())
  content   String
  author    String
  timestamp DateTime @default(now())
  ticketId  String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
}
